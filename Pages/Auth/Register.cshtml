@page
@model parcial_Horta_Gomez.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="min-h-screen flex flex-col sm:justify-center items-center pt-6 sm:pt-0 bg-gray-100">
    <div class="w-full sm:max-w-md mt-6 px-6 py-4 bg-white shadow-md overflow-hidden sm:rounded-lg">
        <h2 class="text-center text-2xl font-bold">Register</h2>
        <hr class="my-4">

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2">
                    Username
                </label>
                <input asp-for="User.Name" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500" required />
                <span asp-validation-for="User.Name" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <label asp-for="User.Email" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="User.Email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500" required />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="User.Password" class="block text-gray-700 text-sm font-bold mb-2">Password:</label>
                <input asp-for="User.Password" type="password" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500" required />
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>
            <div class="flex items-center justify-between">
                <input type="submit" value="Create" class="px-4 py-2 rounded-md bg-indigo-600 text-white hover:bg-indigo-500 focus:outline-none focus:bg-indigo-500"/>
                <a asp-page="/Auth/login" class="text-sm text-gray-600 hover:underline">Already have an account? Login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}