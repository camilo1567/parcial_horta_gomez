@page
@model parcial_Horta_Gomez.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
}

<body class="bg-gray-100">
    <div class="min-h-screen flex items-center justify-center">
        <div class="max-w-md w-full px-6 py-8 bg-white shadow-md">
            <h2 class="text-3xl font-bold mb-6">Login</h2>

            <form method="post">
                <div class="mb-4">
                    <label class="block mb-2 text-sm font-medium text-gray-600">Name</label>
                    <input  asp-for="User.Name" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                    <div>
                        <span class="text-danger" asp-validation-for="User.Name"></span>
                    </div>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-4">
                    <label class="block mb-2 text-sm font-medium text-gray-600">Email</label>
                    <input type="email" asp-for="User.Email" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                    <div>
                        <span class="text-danger" asp-validation-for="User.Email"></span>
                     </div>
                </div>

                <div class="mb-4">
                    <label class="block mb-2 text-sm font-medium text-gray-600">Password</label>
                    <input type="password"  asp-for="User.Password" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                    <div>
                        <span class="text-danger" asp-validation-for="User.Password"></span>
                    </div>
                </div>

                <div class="flex items-center justify-between">
                    <button type="submit" class="w-full bg-indigo-500 text-white font-bold py-2 px-4 rounded hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Login</button>
                </div>
            </form>
        </div>
    </div>
</body>

