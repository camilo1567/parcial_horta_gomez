@page
@model parcial_Horta_Gomez.Pages.Clientes.EditModel
@{
    ViewData["Title"] = "Editars Clientes";
}
<form class="bg-white p-10">
    <div class="mb-4">
        <label for="nombre" class="block text-gray-700 text-sm font-bold mb-2">
            Nombre:
        </label>
        <input type="text" id="nombre" name="nombre" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
    </div>
    <div class="mb-4">
        <label for="numeroDocumento" class="block text-gray-700 text-sm font-bold mb-2">
            Número de documento:
        </label>
        <input type="text" id="numeroDocumento" name="numeroDocumento" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
    </div>
    <div class="flex gap-2">
        <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white rounded-lg flex items-center font-bold py-2 px-4 focus:outline-none focus:shadow-outline">
            Editar
        </button>
        <a asp-area="" asp-page="/Clientes/Index" class="bg-black hover:bg-black/50 text-white rounded-lg flex items-center font-bold py-2 px-4 focus:outline-none focus:shadow-outline">
            Regresar
        </a>
    </div>
</form>
