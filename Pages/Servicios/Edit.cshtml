@page
@model parcial_Horta_Gomez.Pages.Servicios.EditModel
@{
    ViewData["Title"] = "Editar Servicio";
}
<form class="bg-white p-10">
    <div class="mb-4">
        <label for="servicio_id" class="block text-gray-700 text-sm font-bold mb-2">
            Servicio
        </label>
        <input type="text" id="servicio_id" name="servicio_id" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
    </div>
    <div class="flex gap-2">
        <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white rounded-lg flex items-center font-bold py-2 px-4 focus:outline-none focus:shadow-outline">
            Editar
        </button>
        <a asp-area="" asp-page="/Servicios/Index" class="bg-black hover:bg-black/50 text-white rounded-lg flex items-center font-bold py-2 px-4 focus:outline-none focus:shadow-outline">
            Regresar
        </a>
    </div>
</form>