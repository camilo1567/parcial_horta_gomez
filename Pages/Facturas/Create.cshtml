@page
@model parcial_Horta_Gomez.Pages.Facturas.CreateModel
@{
    ViewData["Title"] = "Crear Factura";
}
<form class="bg-white p-10">
    <div class="mb-4">
        <label for="servicio_id" class="block text-gray-700 text-sm font-bold mb-2">
            Servicio:
        </label>
        <input type="text" id="servicio_id" name="servicio_id" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
    </div>
    <div class="mb-4">
        <label for="vendedor_id" class="block text-gray-700 text-sm font-bold mb-2">
            Vendedor
        </label>
        <input type="text" id="vendedor_id" name="vendedor_id" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
    </div>
    <div class="mb-4">
        <label for="cliente_id" class="block text-gray-700 text-sm font-bold mb-2">
            Cliente
        </label>
        <input type="text" id="cliente_id" name="cliente_id" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
    </div>
    <div class="flex gap-2">
        <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white rounded-lg flex items-center font-bold py-2 px-4 focus:outline-none focus:shadow-outline">
            Crear
        </button>
        <a asp-area="" asp-page="/Facturas/Index" class="bg-black hover:bg-black/50 text-white rounded-lg flex items-center font-bold py-2 px-4 focus:outline-none focus:shadow-outline">
            Regresar
        </a>
    </div>
</form>