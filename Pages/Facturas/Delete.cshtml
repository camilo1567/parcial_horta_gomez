@page
@model parcial_Horta_Gomez.Pages.Facturas.DeleteModel
@{
    ViewData["Title"] = "Eliminar Factura";
}
<form class="bg-white p-10">
    <div class="mb-4">
        <label for="nombre" class="block text-gray-700 text-sm font-bold mb-2">
            Servicio:
        </label>
        <p>
            Vender
        </p>
    </div>
    <div class="mb-4">
        <label for="vendedor_id" class="block text-gray-700 text-sm font-bold mb-2">
            Vendedor
        </label>
        <p>
            Miguel Gomez
        </p>
    </div>
    <div class="mb-4">
        <label for="cliente_id" class="block text-gray-700 text-sm font-bold mb-2">
            Cliente
        </label>
        <p>
            Cualquiera
        </p>
    </div>
    <div class="mb-4">
        <label for="cliente_id" class="block text-gray-700 text-sm font-bold mb-2">
            Fecha
        </label>
        <p>
            CREATED_AT
        </p>
    </div>
    <div class="flex gap-2">
        <button type="submit" class="bg-red-500 hover:bg-red-600 text-white rounded-lg flex items-center font-bold py-2 px-4 focus:outline-none focus:shadow-outlines">
            Eliminar
        </button>
        <a asp-area="" asp-page="/Facturas/Index" class="bg-black hover:bg-black/50 text-white rounded-lg flex items-center font-bold py-2 px-4 focus:outline-none focus:shadow-outline">
            Regresar
        </a>
    </div>
</form>
